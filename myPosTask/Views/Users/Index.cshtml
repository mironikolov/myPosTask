@model IEnumerable<myPosTask.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<table class="table" id="usersTable">
    <thead>
        <tr>
            <td>User</td>
            <td>Credits</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Credits</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
 {   
 
    <script>
        $(document).ready(function () {
            $('#usersTable').dataTable();
        });
    </script>
 }